<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tic_tac_portrait"
    android:gravity="center"
    tools:context=".MainActivity">

    <android.support.design.widget.TextInputEditText
        android:padding="16dp"
        android:background="@drawable/rectangle_textedit"
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "16dp"/>


    <android.support.design.widget.TextInputEditText
        android:padding="16dp"
        android:background="@drawable/rectangle_textedit"
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "16dp"/>

        <Button
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/btn_without_engles_transp"
            android:layout_margin="8dp"
            android:id="@+id/log_in"
            android:text="Войти"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/btn_without_engles_transp"
            android:id="@+id/btn_register"
            android:text="@string/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/btn_without_engles_transp"
        android:layout_margin="8dp"
        android:id="@+id/btn_without_register"
        android:text="@string/without_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>